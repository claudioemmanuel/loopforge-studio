{
  "name": "@loopforge/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:local": "dotenv -e .env.local -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "health": "dotenv -e .env.local -- tsx scripts/health-check.ts",
    "db:setup": "dotenv -e .env.local -- tsx scripts/setup.ts",
    "db:generate": "prisma generate",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:seed:agents": "dotenv -e .env.local -- tsx src/scripts/seed-agents.ts",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset --force"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "@google/generative-ai": "^0.12.0",
    "@loopforge/shared": "workspace:*",
    "@prisma/client": "^5.12.0",
    "bullmq": "^5.7.0",
    "fastify": "^4.26.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.38.0",
    "pino-pretty": "^13.1.3",
    "redis": "^5.10.0",
    "socket.io": "^4.7.5",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.5",
    "@types/redis": "^4.0.11",
    "prisma": "^5.12.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.0"
  }
}
