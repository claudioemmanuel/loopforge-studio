{
  "name": "loopforge-studio",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:init": "pnpm docker:up && pnpm --filter @loopforge/api health && pnpm --filter @loopforge/api db:setup && pnpm --filter @loopforge/web dev",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "build": "pnpm --filter @loopforge/shared build && pnpm --parallel --filter '!@loopforge/shared' build",
    "lint": "pnpm --parallel run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\" --ignore-path .prettierignore"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0"
  }
}
